{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:client": "cd ../frontend && npm ci && npm run build && rm -rf ../backend/public && mkdir -p ../backend/public && cp -R dist/* ../backend/public/",
    "build:server": "npm run generate && tsc -p tsconfig.json",
    "generate": "prisma generate",
    "build": "npm run build:client && npm run build:server",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "start": "node dist/server.js",
    "db:push": "prisma db push",
    "db:seed": "ts-node prisma/seed.ts",
    "ingest:web": "ts-node scripts/ingest.ts",
    "ingest:catalog": "ts-node scripts/ingest_catalog.ts",
    "transform:web": "ts-node scripts/transform.ts"
  },
  "keywords": [],
